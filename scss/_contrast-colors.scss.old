//Color shades
$primary-dark: 		darken($primary, 10%);
$primary-darkest: 	darken($primary, 20%);
$primary-light: 	lighten($primary, 10%);
$primary-lightest: 	lighten($primary, 20%);

$danger-dark: 		darken($danger, 10%);
$danger-darkest: 	darken($danger, 20%);
$danger-light: 		lighten($danger, 10%);
$danger-lightest: 	lighten($danger, 20%);

$warning-dark: 		darken($warning, 10%);
$warning-darkest: 	darken($warning, 20%);
$warning-light: 	lighten($warning, 10%);
$warning-lightest: 	lighten($warning, 20%);

$success-dark: 		darken($success, 10%);
$success-darkest: 	darken($success, 20%);
$success-light: 	lighten($success, 10%);
$success-lightest: 	lighten($success, 20%);

$grey-dark: 		darken($grey, 10%);
$grey-darkest: 		darken($grey, 20%);
$grey-light: 		lighten($grey, 10%);
$grey-lightest: 	lighten($grey, 20%);

//Text contrast
$primary-color-text: 			#5f99f5;
$success-color-text: 			#37b358;	
$info-color-text: 				#6ba4ff;
$warning-color-text: 			#f6c163;	
$danger-color-text: 			#eb6357;	
$grey-color-text: 				darken($grey, 6.1%);
$dark-color-text: 				#3f4850;
$light-color-text: 				$light;
$secondary-color-text:          #d9d9d9;

$theme-contrast-colors: (
	"primary":    $primary-color-text,
	"success":    $success-color-text,
	"info":       $info-color-text,
	"warning":    $warning-color-text,
	"danger":     $danger-color-text,
	"gray":       $grey-color-text,
	"dark":       $dark-color-text,
	"light":      $light-color-text
);